{
  "name": "flash-player",
  "version": "1.6.3",
  "productName": "flash-player",
  "executableName": "flash-player",
  "description": "A flash player!",
  "license": "AGPL-3.0-only",
  "main": "main.js",
  "author": {
    "name": "Allan Niles",
    "url": "https://github.com/allancoding"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allancoding/flashplayer"
  },
  "build": {
    "appId": "net.allancoding.flashplayer",
    "files": [
      "./flash/**/*",
      "./*.js",
      "./*.html",
      "./demo/**/*",
      "./icon.*"
    ],
    "asarUnpack": [
      "./flash/**/*"
    ],
    "dmg": {
      "background": null,
      "backgroundColor": "#000",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "Flash Player",
      "oneClick": true,
      "perMachine": false,
      "artifactName": "Flash Player.${ext}"
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "appimage": "electron-builder build --linux AppImage --publish=never",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-pkg": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@electron-forge/publisher-github": "^6.1.1",
    "@rabbitholesyndrome/electron-forge-maker-portable": "^0.1.1",
    "@reforged/maker-appimage": "^3.1.13",
    "electron": "^11.5.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-storage": "^1.0.7",
    "update-electron-app": "^2.0.1"
  }
}
